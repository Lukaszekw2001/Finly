<Application x:Class="Finly.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             ShutdownMode="OnLastWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- STARTOWY motyw: podmień na Themes/Dark.xaml jeśli chcesz ciemny -->
                <ResourceDictionary Source="Themes/Light.xaml"/>
                <ResourceDictionary Source="Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- wspólny styl okna -->
            <Style TargetType="Window">
                <Setter Property="WindowState" Value="Maximized"/>
                <Setter Property="ResizeMode"  Value="CanResize"/>
                <Setter Property="MinWidth"    Value="1000"/>
                <Setter Property="MinHeight"   Value="650"/>
                <Setter Property="Background"  Value="{DynamicResource App.Background}"/>
                <Setter Property="Foreground"  Value="{DynamicResource App.Foreground}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
