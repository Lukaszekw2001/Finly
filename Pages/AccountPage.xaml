<UserControl x:Class="Finly.Pages.AccountPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:helpers="clr-namespace:Finly.Helpers"
             mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24" helpers:StackPanelSpacing.Spacing="16">

            <TextBlock Text="Konto" FontSize="24" FontWeight="Bold"/>

            <!-- PROFIL -->
            <Border Background="{DynamicResource Surface.Background}"
                    BorderBrush="{DynamicResource Surface.Border}"
                    BorderThickness="1" CornerRadius="10">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1.2*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                               Text="Profil" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8"/>

                    <!-- Dane osobowe -->
                    <StackPanel Grid.Row="1" Grid.Column="0" helpers:StackPanelSpacing.Spacing="8">
                        <TextBlock Text="Dane osobowe" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal" helpers:StackPanelSpacing.Spacing="8">
                            <TextBlock Text="Użytkownik:" Width="120"/>
                            <TextBlock Text="{Binding Username}" FontWeight="SemiBold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" helpers:StackPanelSpacing.Spacing="8">
                            <TextBlock Text="E-mail:" Width="120"/>
                            <TextBlock Text="{Binding Email}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" helpers:StackPanelSpacing.Spacing="8">
                            <TextBlock Text="Utworzono:" Width="120"/>
                            <TextBlock Text="{Binding CreatedAt, StringFormat={}{0:yyyy-MM-dd}}"/>
                        </StackPanel>

                        <DockPanel>
                            <StackPanel Width="260" helpers:StackPanelSpacing.Spacing="4">
                                <TextBlock Text="Imię"/>
                                <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <StackPanel Width="260" Margin="12,0,0,0" helpers:StackPanelSpacing.Spacing="4">
                                <TextBlock Text="Nazwisko"/>
                                <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                        </DockPanel>

                        <StackPanel helpers:StackPanelSpacing.Spacing="4">
                            <TextBlock Text="Adres (ulica, kod, miasto)"/>
                            <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Dane firmy -->
                    <StackPanel Grid.Row="1" Grid.Column="1" helpers:StackPanelSpacing.Spacing="8">
                        <TextBlock Text="Dane firmy (opcjonalnie)" FontWeight="SemiBold"/>
                        <StackPanel helpers:StackPanelSpacing.Spacing="4">
                            <TextBlock Text="Nazwa firmy"/>
                            <TextBox Text="{Binding CompanyName, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <DockPanel>
                            <StackPanel Width="200" helpers:StackPanelSpacing.Spacing="4">
                                <TextBlock Text="NIP"/>
                                <TextBox Text="{Binding CompanyNip, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <StackPanel Margin="12,0,0,0" helpers:StackPanelSpacing.Spacing="4">
                                <TextBlock Text="Adres firmy"/>
                                <TextBox Width="300" Text="{Binding CompanyAddress, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                        </DockPanel>

                        <Button Content="Zapisz dane" Width="140"
                                Command="{Binding SaveProfileCommand}"
                                Style="{StaticResource PrimaryButton}" />
                    </StackPanel>

                    <!-- Zmiana hasła -->
                    <StackPanel Grid.Row="2" Grid.ColumnSpan="2"
                                Margin="0,16,0,0" helpers:StackPanelSpacing.Spacing="8">
                        <TextBlock Text="Zmiana hasła" FontSize="16" FontWeight="SemiBold"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Wpisz aktualne hasło:" VerticalAlignment="Center"/>
                            <PasswordBox x:Name="PwdOld" Grid.Column="1" />

                            <TextBlock Grid.Column="2" Text="Nowe hasło:" VerticalAlignment="Center" Margin="16,0,0,0"/>
                            <PasswordBox x:Name="PwdNew" Grid.Column="3" />
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Powtórz nowe hasło:" VerticalAlignment="Center"/>
                            <PasswordBox x:Name="PwdNew2" Grid.Column="1" />
                        </Grid>

                        <StackPanel Orientation="Horizontal" helpers:StackPanelSpacing.Spacing="12">
                            <Button Content="Zmień hasło"
                                    Style="{StaticResource PrimaryButton}"
                                    Click="ChangePassword_Click"/>
                            <TextBlock Text="{Binding PasswordChangeMessage}"
                                       Foreground="{Binding PasswordChangeBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- BANKI + RACHUNKI -->
            <Border Background="{DynamicResource Surface.Background}"
                    BorderBrush="{DynamicResource Surface.Border}"
                    BorderThickness="1" CornerRadius="10">
                <StackPanel Margin="16" helpers:StackPanelSpacing.Spacing="12">
                    <StackPanel Orientation="Horizontal" helpers:StackPanelSpacing.Spacing="12">
                        <TextBlock Text="Połączone banki" FontSize="18" FontWeight="SemiBold"/>
                        <Button Content="Dodaj bank" Style="{StaticResource PrimaryButton}"
                                Command="{Binding ConnectBankCommand}"/>
                        <Button Content="Synchronizuj teraz" Command="{Binding SyncNowCommand}"/>
                    </StackPanel>

                    <ItemsControl ItemsSource="{Binding BankConnections}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,6,0,0"
                                        Background="{DynamicResource Surface.Background}"
                                        BorderBrush="{DynamicResource Surface.Border}"
                                        BorderThickness="1" CornerRadius="6">
                                    <Grid Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel>
                                            <TextBlock Text="{Binding BankName}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding AccountHolder}" FontSize="12" Opacity="0.8"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Ostatnia synchronizacja" FontSize="12" Opacity="0.8"/>
                                            <TextBlock Text="{Binding LastSync, StringFormat={}{0:yyyy-MM-dd HH:mm}}"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="2" Text="{Binding Status}" VerticalAlignment="Center"/>
                                        <Button Grid.Column="3" Content="Odłącz"
            Command="{Binding DataContext.DisconnectBankCommand,
                              RelativeSource={RelativeSource AncestorType=UserControl}}"
            CommandParameter="{Binding}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Expander Header="Rachunki (saldo)" IsExpanded="False">
                        <DataGrid ItemsSource="{Binding BankAccounts}"
                                  AutoGenerateColumns="False" HeadersVisibility="Column"
                                  CanUserAddRows="False" IsReadOnly="True" Margin="0,8,0,0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Bank" Binding="{Binding BankName}" Width="*"/>
                                <DataGridTextColumn Header="Nazwa rachunku" Binding="{Binding AccountName}" Width="*"/>
                                <DataGridTextColumn Header="IBAN" Binding="{Binding Iban}" Width="2*"/>
                                <DataGridTextColumn Header="Saldo" Binding="{Binding Balance, StringFormat={}{0:N2}}" Width="*"/>
                                <DataGridTextColumn Header="Waluta" Binding="{Binding Currency}" Width="80"/>
                                <DataGridTextColumn Header="Ost. sync" Binding="{Binding LastSync, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Expander>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>



