<UserControl x:Class="Finly.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Motyw -->
        <GroupBox Header="Motyw aplikacji">
            <StackPanel Orientation="Horizontal" Margin="8,6,8,6">
                <RadioButton x:Name="LightRadio" Content="Jasny" Margin="0,0,16,0"
                             Checked="LightRadio_Checked"/>
                <RadioButton x:Name="DarkRadio"  Content="Ciemny"
                             Checked="DarkRadio_Checked"/>
            </StackPanel>
        </GroupBox>

        <Separator Grid.Row="1"/>

        <!-- Pozycja komunikatów -->
        <GroupBox Grid.Row="2" Header="Pozycja powiadomień (tostów)">
            <StackPanel Orientation="Horizontal" Margin="8,6,8,6">
                <ComboBox x:Name="ToastPosCombo" Width="220"
                          SelectionChanged="ToastPosCombo_SelectionChanged"/>
                <Button x:Name="TestToastButton" Content="Przetestuj"
                        Margin="12,0,0,0" Click="TestToast_Click"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
