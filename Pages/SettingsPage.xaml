<UserControl x:Class="Finly.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Motyw -->
        <GroupBox Header="Motyw aplikacji">
            <StackPanel Orientation="Horizontal" Margin="8,6,8,6">
                <RadioButton x:Name="LightRadio" Content="Jasny"  Checked="LightRadio_Checked"/>
                <RadioButton x:Name="DarkRadio"  Content="Ciemny" Checked="DarkRadio_Checked"/>
                <Button x:Name="PreviewBtn" Content="Przetestuj" Click="PreviewBtn_Click"/>
            </StackPanel>
        </GroupBox>

        <Separator Grid.Row="1"/>

        <!-- Pozycja powiadomień -->
        <GroupBox Grid.Row="2" Header="Pozycja powiadomień (tostów)">
            <StackPanel Orientation="Horizontal" Margin="8,6,8,6">
                <ComboBox x:Name="ToastPosCombo" Width="220"
                  SelectionChanged="ToastPosCombo_SelectionChanged"/>
                <Button Content="Wyśrodkuj dół" Click="PreviewBtn_Click"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>

