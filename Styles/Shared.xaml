<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- BRAND / ACCENT -->
    <SolidColorBrush x:Key="Brand.Orange"       Color="#FF8A00"/>
    <SolidColorBrush x:Key="Brand.Blue"         Color="#3B82F6"/>
    <SolidColorBrush x:Key="Accent"             Color="#3B82F6"/>
    <SolidColorBrush x:Key="Accent.Hover"       Color="#2563EB"/>
    <SolidColorBrush x:Key="Accent.Foreground"  Color="#FFFFFF"/>

    <!-- Separator (linia między panelem a treścią) -->
    <SolidColorBrush x:Key="Separator.Orange"   Color="#FF8A00"/>

    <!-- Bazowe pędzle (wartości startowe – motyw je nadpisze) -->
    <SolidColorBrush x:Key="App.Background"     Color="#16181C"/>
    <SolidColorBrush x:Key="App.Foreground"     Color="#EAEAEA"/>
    <SolidColorBrush x:Key="Surface.Background" Color="#1D2026"/>
    <SolidColorBrush x:Key="Surface.Border"     Color="#2A2F37"/>
    <SolidColorBrush x:Key="Control.Background" Color="#26282D"/>
    <SolidColorBrush x:Key="Control.Border"     Color="#3A3D44"/>
    <SolidColorBrush x:Key="Control.Foreground" Color="#EAEAEA"/>

    <SolidColorBrush x:Key="TitleBar.Background"    Color="#000000"/>
    <SolidColorBrush x:Key="Sidebar.Background"     Color="#121417"/>
    <SolidColorBrush x:Key="Sidebar.Foreground"     Color="#EAEAEA"/>
    <SolidColorBrush x:Key="Sidebar.Hover"          Color="#1A1E25"/>
    <SolidColorBrush x:Key="Sidebar.ActiveBg"       Color="#1B1E24"/>
    <SolidColorBrush x:Key="Sidebar.ActiveIndicator" Color="#FF8A00"/>

    <!-- Stany -->
    <SolidColorBrush x:Key="ErrorBrush" Color="#E74C3C"/>

    <!-- ALIASY KOMPATYBILNOŚCI -->
    <!-- Tekst/ikony na tle akcentu -->
    <SolidColorBrush x:Key="OnAccent" Color="#FFFFFF"/>

    <!-- Stan 'pressed' akcentu (głębszy niebieski) -->
    <SolidColorBrush x:Key="Accent.Pressed" Color="#1D4ED8"/>

    <!-- Stare nazwy sidebara, gdy gdzieś w XAML jest Sidebar.Bg / Sidebar.Fg -->
    <SolidColorBrush x:Key="Sidebar.Bg" Color="#121417"/>
    <SolidColorBrush x:Key="Sidebar.Fg" Color="#EAEAEA"/>
</ResourceDictionary>
