<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <RootNamespace>Finly</RootNamespace>
    <AssemblyName>Finly</AssemblyName>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <Platforms>AnyCPU;x64</Platforms>
  </PropertyGroup>

	<ItemGroup>
		<!-- LiveChartsCore v2 (WPF + Skia) -->
		<PackageReference Include="LiveChartsCore.SkiaSharpView.WPF" Version="2.0.0-rc6.1" />

		<!-- SQLite -->
		<PackageReference Include="System.Data.SQLite.Core" Version="1.0.119" />

		<!-- PDF – zostajemy przy QuestPDF -->
		<PackageReference Include="QuestPDF" Version="2024.5.0" />

		<!-- Hash haseł -->
		<PackageReference Include="BCrypt.Net-Next" Version="4.0.3" />
	</ItemGroup>


	<ItemGroup>
    <Folder Include="Styles\" />
    <Folder Include="Themes\" />
  </ItemGroup>

</Project>
