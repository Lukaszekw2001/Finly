<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <RootNamespace>Finly</RootNamespace>
    <AssemblyName>Finly</AssemblyName>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <Platforms>AnyCPU;x64</Platforms>
  </PropertyGroup>

<ItemGroup>
  <!-- Wykresy -->
  <PackageReference Include="LiveChartsCore.SkiaSharpView.WPF" Version="2.0.0" />

  <!-- SQLite provider zgodnie z ustaleniami -->
  <PackageReference Include="System.Data.SQLite.Core" Version="1.0.119" />

  <!-- PDF: nowocześnie i bez ostrzeżeń -->
  <PackageReference Include="QuestPDF" Version="2024.5.0" />

  <!-- Bezpieczeństwo: bcrypt do haseł -->
  <PackageReference Include="BCrypt.Net-Next" Version="4.0.3" />
</ItemGroup>


  <ItemGroup>
    <Folder Include="Styles\" />
    <Folder Include="Themes\" />
  </ItemGroup>

</Project>
