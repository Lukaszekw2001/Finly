<!-- Themes/Dark.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- brakujące klucze wymagane przez App.xaml -->
	<SolidColorBrush x:Key="Control.Background" Color="#2A2A2A"/>
	<SolidColorBrush x:Key="Control.Foreground" Color="#EEEEEE"/>
	<SolidColorBrush x:Key="Control.Border"     Color="#3E3E3E"/>
	<SolidColorBrush x:Key="Surface.Border"     Color="#3E3E3E"/>

	<!-- tło / tekst -->
	<SolidColorBrush x:Key="App.Background"  Color="#1E1E1E"/>
	<SolidColorBrush x:Key="App.Foreground"  Color="#EEEEEE"/>

	<!-- powierzchnie -->
	<SolidColorBrush x:Key="Surface.Background" Color="#2A2A2A"/>
	<SolidColorBrush x:Key="Border.Brush"       Color="#3E3E3E"/>

	<!-- przyciski -->
	<SolidColorBrush x:Key="Button.Background"  Color="#333333"/>

	<!-- topbar -->
	<SolidColorBrush x:Key="Nav.Background"     Color="#111111"/>
	<SolidColorBrush x:Key="Nav.Foreground"     Color="#FFFFFF"/>

	<!-- (opcjonalnie) akcent -->
	<SolidColorBrush x:Key="Accent"             Color="#4E8EF7"/>
</ResourceDictionary>
