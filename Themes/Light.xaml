<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="App.Background"            Color="#F5F7FB"/>
    <SolidColorBrush x:Key="App.Foreground"            Color="#111111"/>

    <SolidColorBrush x:Key="Sidebar.Background"        Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Sidebar.Foreground"        Color="#1F2937"/>
    <SolidColorBrush x:Key="Sidebar.Border"            Color="#E5E7EB"/>
    <SolidColorBrush x:Key="Sidebar.ItemHoverBrush"    Color="#EEF2FF"/>

    <SolidColorBrush x:Key="Surface.Background"        Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Surface.Border"            Color="#E5E7EB"/>

    <SolidColorBrush x:Key="AccentBrush"               Color="#4C6EF5"/>
</ResourceDictionary>
