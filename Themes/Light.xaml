<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- PALeta -->
	<Color x:Key="Primary">#FF4C6FFF</Color>
	<Color x:Key="Primary.Dark">#FF324FE6</Color>
	<Color x:Key="Accent">#FF00B894</Color>

	<Color x:Key="Bg.Base">#FFF7F8FA</Color>
	<Color x:Key="Bg.Surface">#FFFFFFFF</Color>
	<Color x:Key="Border.Base">#1A000000</Color>

	<Color x:Key="Fg.Primary">#FF111827</Color>
	<Color x:Key="Fg.Muted">#8A111827</Color>
	<Color x:Key="Fg.Invert">#FFFFFFFF</Color>

	<!-- Brushes -->
	<SolidColorBrush x:Key="App.Background" Color="{StaticResource Bg.Base}"/>
	<SolidColorBrush x:Key="App.Foreground" Color="{StaticResource Fg.Primary}"/>

	<SolidColorBrush x:Key="Surface.Background" Color="{StaticResource Bg.Surface}"/>
	<SolidColorBrush x:Key="Surface.Border" Color="{StaticResource Border.Base}"/>

	<SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
	<SolidColorBrush x:Key="PrimaryBrush.Dark" Color="{StaticResource Primary.Dark}"/>
	<SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>

	<SolidColorBrush x:Key="Text.Primary" Color="{StaticResource Fg.Primary}"/>
	<SolidColorBrush x:Key="Text.Muted" Color="{StaticResource Fg.Muted}"/>
	<SolidColorBrush x:Key="Text.Invert" Color="{StaticResource Fg.Invert}"/>

</ResourceDictionary>
