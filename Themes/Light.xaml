<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Podstawowe tła/teksty -->
    <SolidColorBrush x:Key="App.Background"     Color="#F5EFE7"/>
    <!-- beż -->
    <SolidColorBrush x:Key="App.Foreground"     Color="#1A1D22"/>

    <SolidColorBrush x:Key="Surface.Background" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Surface.Border"     Color="#E6E1DA"/>

    <SolidColorBrush x:Key="Control.Background" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="Control.Border"     Color="#DCD7D0"/>
    <SolidColorBrush x:Key="Control.Foreground" Color="#1A1D22"/>

    <!-- Pasek tytułu i sidebar -->
    <SolidColorBrush x:Key="TitleBar.Background"    Color="#FFF7EC"/>
    <SolidColorBrush x:Key="Sidebar.Background"     Color="#FFF2E3"/>
    <SolidColorBrush x:Key="Sidebar.Foreground"     Color="#1A1D22"/>
    <SolidColorBrush x:Key="Sidebar.Hover"          Color="#FFEAD3"/>
    <SolidColorBrush x:Key="Sidebar.ActiveBg"       Color="#FFE3C3"/>
    <SolidColorBrush x:Key="Sidebar.ActiveIndicator" Color="#FF8A00"/>

    <!-- Aliasowe klucze dla wstecznej zgodności -->
    <SolidColorBrush x:Key="Sidebar.Bg" Color="#FFF2E3"/>
    <SolidColorBrush x:Key="Sidebar.Fg" Color="#1A1D22"/>

</ResourceDictionary>
