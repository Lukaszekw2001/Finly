<Window x:Class="Finly.Shell.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Finly"
        WindowStyle="None"
        WindowState="Maximized"
        Background="{DynamicResource App.Background}">

    <!-- Utrzymanie możliwości przeciągania i zmiany rozmiaru po wyłączeniu systemowego paska -->
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="48"
                            ResizeBorderThickness="6"
                            CornerRadius="0"
                            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <!-- SIATKA GŁÓWNA: 0 = pasek tytułu, 1 = zawartość -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== PASEK TYTUŁU (czarny) ===== -->
        <Grid Grid.Row="0" Background="#000000"
              MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- lewa: logo + tytuł -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
                <Image Source="/Assets/Images/logoFinly.png"
                       Width="70" Height="70" Stretch="Uniform"
                       Margin="0,0,8,0"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       shell:WindowChrome.IsHitTestVisibleInChrome="True"/>

            </StackPanel>

            <!-- prawa: przyciski okna -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Width="46" Height="48"
                        Background="Transparent" BorderBrush="{x:Null}"
                        Click="Minimize_Click"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True">
                    <TextBlock Text="—" FontSize="16" Foreground="#EAEAEA"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
                <Button Width="46" Height="48"
                        Background="Transparent" BorderBrush="{x:Null}"
                        Click="MaxRestore_Click"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True">
                    <TextBlock Text="⬜" FontSize="12" Foreground="#EAEAEA"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
                <Button Width="46" Height="48"
                        Background="Transparent" BorderBrush="{x:Null}"
                        Click="Close_Click"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True">
                    <TextBlock Text="✕" FontSize="12" Foreground="#EAEAEA"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
            </StackPanel>
        </Grid>
        <!-- ===== /PASEK TYTUŁU ===== -->

        <!-- ===== ZAWARTOŚĆ OKNA ===== -->
        <Grid Grid.Row="1" Background="{DynamicResource App.Background}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- górny pasek nawigacyjny (Twój) -->
            <Border Grid.Row="0" Style="{StaticResource NavBar}">
                <DockPanel LastChildFill="True">
                    <TextBlock Text="FINLY"
                               Foreground="{DynamicResource Nav.Foreground}"
                               FontWeight="Bold" Margin="16,0"
                               VerticalAlignment="Center"
                               DockPanel.Dock="Left"/>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Left"
                                DockPanel.Dock="Left">
                        <Button Content="Panel główny" Margin="8,16" Padding="18,10" Click="Nav_Dashboard_Click"/>
                        <Button Content="Dodaj wydatek" Margin="8,16" Padding="18,10" Click="Nav_Add_Click"/>
                        <Button Content="Wykresy"        Margin="8,16" Padding="18,10" Click="Nav_Charts_Click"/>
                        <Button Content="Kategorie"      Margin="8,16" Padding="18,10" Click="Nav_Categories_Click"/>
                        <Button Content="Ustawienia"     Margin="8,16" Padding="18,10" Click="Nav_Settings_Click"/>
                    </StackPanel>
                    <Button Content="Wyloguj"
                            Margin="8,16" Padding="18,10"
                            DockPanel.Dock="Right"
                            Click="Nav_Logout_Click"/>
                </DockPanel>
            </Border>

            <!-- host na strony -->
            <Border Grid.Row="1" Background="{DynamicResource App.Background}">
                <ContentControl x:Name="RightHost"/>
            </Border>

            <!-- toasty (na wierzchu, dół/środek) -->
            <Canvas x:Name="ToastLayer"
                    Grid.Row="1"
                    IsHitTestVisible="False"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,24,0,24"/>
        </Grid>
        <!-- ===== /ZAWARTOŚĆ OKNA ===== -->
    </Grid>
</Window>
