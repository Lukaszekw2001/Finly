<Window x:Class="Finly.Shell.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Finly Shell"
        WindowState="Maximized"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource App.Background}">

    <Grid Background="{DynamicResource App.Background}">

        <Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<!-- TOP BAR -->
			<Border Grid.Row="0" Style="{StaticResource NavBar}">
				<DockPanel LastChildFill="False">
					<TextBlock Text="FINLY" Foreground="{DynamicResource Nav.Foreground}"
							   FontWeight="Bold" Margin="16,0" VerticalAlignment="Center"/>
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
					<Button Content="Panel główny" Margin="8,16" Padding="18,10" Click="Nav_Dashboard_Click"/>
					<Button Content="Dodaj wydatek" Margin="8,16" Padding="18,10" Click="Nav_Add_Click"/>
					<Button Content="Wykresy"        Margin="8,16" Padding="18,10" Click="Nav_Charts_Click"/>
					<Button Content="Kategorie"      Margin="8,16" Padding="18,10" Click="Nav_Categories_Click"/>
					<Button Content="Ustawienia"     Margin="8,16" Padding="18,10" Click="Nav_Settings_Click"/>
				</StackPanel>
				<Button Content="Wyloguj" Margin="8,16" Padding="18,10"
						DockPanel.Dock="Right" Click="Nav_Logout_Click"/>
			</DockPanel>
		</Border>

		<!-- CONTENT -->
		<Border Grid.Row="1" Background="{DynamicResource App.Background}">
			<ContentControl x:Name="RightHost"/>
		</Border>

		<!-- TOASTY – dół/środek -->
		<Canvas x:Name="ToastLayer" Grid.Row="1"
				IsHitTestVisible="False"
				HorizontalAlignment="Center"
				VerticalAlignment="Bottom"
				Margin="0,24,0,24"/>
	</Grid>
</Window>
