<UserControl x:Class="Finly.Shell.ToastControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="260" MaxWidth="360" Opacity="0">
	<Border x:Name="Root"
			CornerRadius="8" Padding="12" Margin="0,0,0,10"
			Background="#333333" BorderBrush="#444" BorderThickness="1">
		<Border.Effect>
			<!-- prawdziwy efekt cienia, nie bool z SystemParameters -->
			<DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.35"/>
		</Border.Effect>

		<TextBlock x:Name="Msg" TextWrapping="Wrap" Foreground="White"/>
	</Border>
</UserControl>
