<Window x:Class="Finly.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ustawienia" Width="500" Height="320"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="24">
        <StackPanel>
            <TextBlock Text="Motyw aplikacji" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>

            <!-- RadioButtony MUSZĄ mieć dokładnie te nazwy: -->
            <RadioButton x:Name="LightRadio"
                         Content="Jasny" GroupName="Theme"
                         Margin="0,0,0,8"
                         Checked="LightRadio_Checked"/>
            <RadioButton x:Name="DarkRadio"
                         Content="Ciemny" GroupName="Theme"
                         Checked="DarkRadio_Checked"/>
        </StackPanel>
    </Grid>
</Window>

