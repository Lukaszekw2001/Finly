<Window x:Class="Finly.Views.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel Główny"
        WindowState="Maximized"
        ResizeMode="CanResize"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded">


    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Podsumowanie -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Suma wydatków: " FontWeight="Bold"/>
            <TextBlock x:Name="TotalAmountText" Margin="5,0,20,0"/>
            <TextBlock Text="Liczba wpisów: " FontWeight="Bold"/>
            <TextBlock x:Name="EntryCountText" Margin="5,0,20,0"/>
            <TextBlock Text="Średnia dzienna: " FontWeight="Bold"/>
            <TextBlock x:Name="DailyAverageText" Margin="5,0,0,0"/>
        </StackPanel>

        <!-- Filtry -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <ComboBox x:Name="CategoryFilterComboBox" Width="150" Margin="0,0,10,0" IsEditable="True" />
            <DatePicker x:Name="FromDatePicker" Width="120" Margin="0,0,10,0" />
            <DatePicker x:Name="ToDatePicker" Width="120" Margin="0,0,10,0" />
            <Button Content="Filtruj" Width="80" Click="FilterButton_Click"/>
        </StackPanel>

        <!-- Lista -->
        <ListView x:Name="ExpenseListView" Grid.Row="2" MouseDoubleClick="ExpenseListView_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Kwota"     DisplayMemberBinding="{Binding Amount}"      Width="100"/>
                    <GridViewColumn Header="Kategoria" DisplayMemberBinding="{Binding Category}"    Width="150"/>
                    <GridViewColumn Header="Data"      DisplayMemberBinding="{Binding Date}"        Width="150"/>
                    <GridViewColumn Header="Opis"      DisplayMemberBinding="{Binding Description}" Width="250"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Akcje: lewo/środek/prawo -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Left" Margin="0,10,0,0">
            <Button Content="Dodaj" Width="100" Margin="0,0,10,0" Click="AddExpenseButton_Click"/>
            <Button Content="Usuń"  Width="100" Click="DeleteExpense_Click"/>
        </StackPanel>

        <Button Content="Wykres wydatków"
                Grid.Row="3" HorizontalAlignment="Center" Width="150" Margin="0,10,0,0"
                Click="ShowChart_Click"/>

        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Usuń konto" Click="DeleteAccount_Click"/>
            <Button Content="Wyloguj" Margin="8,0,0,0" Click="LogoutButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
