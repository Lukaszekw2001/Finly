<Window x:Class="Finly.Views.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel Główny"
        WindowState="Maximized"
        ResizeMode="CanResize"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded">


    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Podsumowanie -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Suma wydatków: " FontWeight="Bold"/>
            <TextBlock x:Name="TotalAmountText" Margin="5,0,20,0"/>
            <TextBlock Text="Liczba wpisów: " FontWeight="Bold"/>
            <TextBlock x:Name="EntryCountText" Margin="5,0,20,0"/>
            <TextBlock Text="Średnia dzienna: " FontWeight="Bold"/>
            <TextBlock x:Name="DailyAverageText" Margin="5,0,0,0"/>
        </StackPanel>

        <!-- Filtry -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <ComboBox x:Name="CategoryFilterComboBox" Width="150" Margin="0,0,10,0" IsEditable="True" />
            <DatePicker x:Name="FromDatePicker" Width="120" Margin="0,0,10,0" />
            <DatePicker x:Name="ToDatePicker" Width="120" Margin="0,0,10,0" />
            <Button Content="Filtruj" Width="80" Click="FilterButton_Click"/>
        </StackPanel>

        <!-- Lista -->
        <ListView x:Name="ExpenseListView" Grid.Row="2">
            <ListView.View>
                <GridView>
                    <!-- Kwota 2 miejsca po przecinku -->
                    <GridViewColumn Header="Kwota"
                                DisplayMemberBinding="{Binding Amount, StringFormat={}{0:N2} zł}"
                                Width="110"/>

                    <GridViewColumn Header="Kategoria"
                                DisplayMemberBinding="{Binding Category}"
                                Width="150"/>

                    <GridViewColumn Header="Data"
                                DisplayMemberBinding="{Binding Date, StringFormat={}{0:yyyy-MM-dd}}"
                                Width="150"/>

                    <GridViewColumn Header="Opis"
                                DisplayMemberBinding="{Binding Description}"
                                Width="250"/>

                    <!-- Akcje w wierszu -->
                    <GridViewColumn Header="Akcje" Width="160">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Edytuj"
                                        Padding="8,2"
                                        Margin="0,0,6,0"
                                        Tag="{Binding Id}"
                                        Click="EditExpense_Click"/>
                                    <Button Content="Usuń"
                                        Padding="8,2"
                                        Tag="{Binding Id}"
                                        Click="DeleteExpense_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Dolny pasek akcji (POZA ListView!) -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Left" Margin="0,10,0,0">
            <Button Content="Dodaj" Width="100" Margin="0,0,10,0" Click="AddExpenseButton_Click"/>
            <!-- Jeśli chcesz też usuwanie zaznaczonego z listy: -->
            <Button Content="Usuń zaznaczony" Width="130" Click="DeleteSelected_Click"/>
        </StackPanel>

        <Button Content="Wykres wydatków"
            Grid.Row="3" HorizontalAlignment="Center" Width="150" Margin="0,10,0,0"
            Click="ShowChart_Click"/>

        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Usuń konto" Click="DeleteAccount_Click"/>
            <Button Content="Wyloguj" Margin="8,0,0,0" Click="LogoutButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
