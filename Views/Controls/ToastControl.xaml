<UserControl x:Class="Finly.Shell.ToastControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Opacity="0" MinWidth="320" MaxWidth="520">
    <Border x:Name="Root"
          CornerRadius="10" Padding="12,10" Margin="0,10,0,0"
          Background="#2B2B2B" BorderBrush="#404040" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="14" ShadowDepth="0" Opacity="0.35"/>
        </Border.Effect>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock x:Name="Icon"
                 FontSize="16" FontWeight="SemiBold"
                 Foreground="White" Margin="2,0,10,0" />
            <TextBlock x:Name="Msg"
                 TextWrapping="Wrap" Foreground="White"
                 FontSize="14"/>
        </StackPanel>
    </Border>
</UserControl>
