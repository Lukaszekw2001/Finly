<Window x:Class="Finly.Shell.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Finly"
        WindowStyle="None"
        WindowState="Maximized"
        Background="{DynamicResource App.Background}">

    <!-- =================== RESOURCES =================== -->
    <Window.Resources>

        <!-- (Opcjonalnie) tu możesz nadpisać szerokość sidebara, jeśli chcesz.
             Code-behind spróbuje ją odczytać, ale nie jest to wymagane. -->
        <!-- <sys:String x:Key="Sidebar.Width">420</sys:String> -->

        <!-- Fallbacki kolorów (gdyby nie było w Shared.xaml) -->
        <SolidColorBrush x:Key="Brand.Orange"      Color="#FF8A00"/>
        <SolidColorBrush x:Key="Brand.Orange.Dark" Color="#E57A00"/>
        <SolidColorBrush x:Key="Nav.Hover"         Color="#1F000000"/>

        <!-- Przyciski paska tytułu -->
        <Style x:Key="TitleBarIconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>

        <!-- NAV: kontury pomarańczowe zawsze; półprzezroczyste tło przy hover i gdy aktywne -->
        <Style x:Key="NavButton" TargetType="{x:Type ToggleButton}">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Width" Value="220"/>
            <Setter Property="MinWidth" Value="200"/>
            <Setter Property="MaxWidth" Value="240"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brand.Orange}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border x:Name="bg"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ContentPresenter Margin="12,0"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#33ED7A1A"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#33ED7A1A"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource Brand.Orange}"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Niebieskie akcenty dla stopki -->
        <SolidColorBrush x:Key="Brand.Blue"                Color="#2196F3"/>
        <SolidColorBrush x:Key="Brand.Blue.HoverOverlay"   Color="#142196F3"/>
        <SolidColorBrush x:Key="Brand.Blue.PressedOverlay" Color="#1F2196F3"/>

        <!-- Stopka: ToggleButton (może być "aktywny") -->
        <Style x:Key="SidebarActionToggle.Blue" TargetType="{x:Type ToggleButton}">
            <Setter Property="Foreground" Value="{DynamicResource Sidebar.Foreground}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Width" Value="220"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border x:Name="bg"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter Margin="10,2"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="{DynamicResource Brand.Blue.HoverOverlay}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="{DynamicResource Brand.Blue.HoverOverlay}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="{DynamicResource Brand.Blue.PressedOverlay}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <!-- ================= /RESOURCES ================= -->

    <!-- WindowChrome (własny pasek tytułu) -->
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="48"
                            ResizeBorderThickness="6"
                            CornerRadius="0"
                            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== PASEK TYTUŁU ===== -->
        <Grid Grid.Row="0"
              Background="{DynamicResource TitleBar.Background}"
              MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Finly"
                       VerticalAlignment="Center"
                       Margin="12,0,0,0"
                       Foreground="{DynamicResource App.Foreground}"
                       FontWeight="SemiBold"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Style="{StaticResource TitleBarIconButton}" Width="46" Height="32"
                        Click="Minimize_Click" shell:WindowChrome.IsHitTestVisibleInChrome="True">
                    <TextBlock Text="—" FontSize="16"/>
                </Button>
                <Button Style="{StaticResource TitleBarIconButton}" Width="46" Height="32"
                        Click="MaxRestore_Click" shell:WindowChrome.IsHitTestVisibleInChrome="True">
                    <TextBlock Text="⬜" FontSize="12"/>
                </Button>
                <Button Style="{StaticResource TitleBarIconButton}" Width="46" Height="32"
                        Click="Close_Click" shell:WindowChrome.IsHitTestVisibleInChrome="True">
                    <TextBlock Text="✕" FontSize="12"/>
                </Button>
            </StackPanel>
        </Grid>
        <!-- ===== /PASEK TYTUŁU ===== -->

        <!-- ===== TREŚĆ: SIDEBAR + CONTENT ===== -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- Fallback 420; finalną szerokość nadpisujemy w code-behind -->
                <ColumnDefinition x:Name="SidebarCol" Width="420"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR -->
            <Border Grid.Column="0" Background="{DynamicResource Sidebar.Background}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- GÓRA: logo (klik = dashboard) -->
                    <StackPanel Grid.Row="0" Margin="16,16,16,8">
                        <Button Click="Logo_Click"
                                Background="Transparent" BorderBrush="{x:Null}" Cursor="Hand">
                            <DockPanel LastChildFill="False" VerticalAlignment="Center">
                                <Image Width="200" Height="200"
                                       SnapsToDevicePixels="True"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       Stretch="Uniform"
                                       Source="pack://application:,,,/Assets/Images/logoFinly.png"
                                       DockPanel.Dock="Left"/>
                            </DockPanel>
                        </Button>
                        <Separator Margin="0,12,0,8"
                                   Background="{DynamicResource Surface.Border}"/>
                    </StackPanel>

                    <!-- NAWIGACJA -->
                    <StackPanel Grid.Row="1" Margin="8,0,8,8" x:Name="NavContainer">
                        <ToggleButton x:Name="NavAdd"            Style="{StaticResource NavButton}" Content="Dodaj wydatek"  Click="Nav_Add_Click"/>
                        <ToggleButton x:Name="NavTransactions"   Style="{StaticResource NavButton}" Content="Transakcje"     Click="Nav_Transactions_Click"/>
                        <ToggleButton x:Name="NavCharts"         Style="{StaticResource NavButton}" Content="Wykresy"        Click="Nav_Charts_Click"/>
                        <ToggleButton x:Name="NavBudgets"        Style="{StaticResource NavButton}" Content="Budżety"        Click="Nav_Budgets_Click"/>
                        <ToggleButton x:Name="NavSubscriptions"  Style="{StaticResource NavButton}" Content="Subskrypcje"    Click="Nav_Subscriptions_Click"/>
                        <ToggleButton x:Name="NavGoals"          Style="{StaticResource NavButton}" Content="Cele"           Click="Nav_Goals_Click"/>
                        <ToggleButton x:Name="NavCategories"     Style="{StaticResource NavButton}" Content="Kategorie"      Click="Nav_Categories_Click"/>
                        <ToggleButton x:Name="NavReports"        Style="{StaticResource NavButton}" Content="Raporty"        Click="Nav_Reports_Click"/>
                        <ToggleButton x:Name="NavImport"         Style="{StaticResource NavButton}" Content="Import / Sync"  Click="Nav_Import_Click"/>
                    </StackPanel>

                    <!-- DÓŁ: Konto / Ustawienia / Wyloguj -->
                    <Grid Grid.Row="2" Margin="8,8,8,16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Separator Grid.Row="0" Margin="0,8,0,12" Background="{DynamicResource Surface.Border}"/>

                        <!-- Ikony nad napisami: lewo=Konto, środek=Ustawienia, prawo=Wyloguj -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <!-- KONTO -->
                            <ToggleButton x:Name="FooterAccount"
                                          Grid.Column="0"
                                          Style="{StaticResource SidebarActionToggle.Blue}"
                                          Click="OpenProfile_Click">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                               Text="&#xE77B;" FontSize="18"
                                               HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <TextBlock Text="Konto"/>
                                </StackPanel>
                            </ToggleButton>

                            <!-- USTAWIENIA -->
                            <ToggleButton x:Name="FooterSettings"
                                          Grid.Column="1"
                                          Style="{StaticResource SidebarActionToggle.Blue}"
                                          Click="OpenSettings_Click">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                               Text="&#xE713;" FontSize="18"
                                               HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <TextBlock Text="Ustawienia"/>
                                </StackPanel>
                            </ToggleButton>

                            <!-- WYLOGUJ (nie zostaje "aktywny") -->
                            <ToggleButton x:Name="FooterLogout"
                                          Grid.Column="2"
                                          Style="{StaticResource SidebarActionToggle.Blue}"
                                          Click="Nav_Logout_Click">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                               Text="&#xF3B1;" FontSize="18"
                                               HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <TextBlock Text="Wyloguj"/>
                                </StackPanel>
                            </ToggleButton>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>

            <!-- CONTENT -->
            <Grid Grid.Column="1" Background="{DynamicResource App.Background}">
                <ContentControl x:Name="RightHost"/>
            </Grid>
        </Grid>
        <!-- ===== /TREŚĆ ===== -->
    </Grid>
</Window>
