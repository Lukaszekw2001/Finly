<Window x:Class="Finly.Views.EditExpenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edytuj wydatek"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Background="{DynamicResource Surface.Background}"
        AllowsTransparency="False"
        Padding="20">
    <Border CornerRadius="12"
            Background="{DynamicResource Surface.Background}"
            BorderBrush="{DynamicResource Surface.Border}"
            BorderThickness="1">
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="260"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Kwota:" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Margin="0,0,8,8"/>
            <TextBox x:Name="AmountBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8" MinWidth="180"/>

            <TextBlock Text="Data:" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="0,0,8,8"/>
            <DatePicker x:Name="DateBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8" />

            <TextBlock Text="Kategoria:" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" Margin="0,0,8,8"/>
            <!-- IsEditable, żeby można było wpisać własną nazwę; ItemsSource ustawimy w code-behind -->
            <ComboBox x:Name="CategoryBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8"
                      IsEditable="True" IsTextSearchEnabled="True"/>

            <TextBlock Text="Opis:" VerticalAlignment="Top" Grid.Row="3" Grid.Column="0" Margin="0,2,8,0"/>
            <TextBox x:Name="DescriptionBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,8"
                     AcceptsReturn="True" TextWrapping="Wrap" Height="70"/>

            <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal"
                        HorizontalAlignment="Right" Margin="0,8,0,0">
                <Button Content="Anuluj" Width="100" Margin="0,0,8,0" Click="Cancel_Click"/>
                <Button Content="Zapisz"  Width="120" Click="Save_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

