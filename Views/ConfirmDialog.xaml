<Window x:Class="Finly.Views.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        Background="Transparent" ShowInTaskbar="False" Topmost="True">
    <Border CornerRadius="12" Background="#1F1F1F" BorderBrush="#3A3A3A" BorderThickness="1" Padding="18">
        <StackPanel>
            <TextBlock x:Name="MessageText" Foreground="White" FontSize="14" TextWrapping="Wrap" Margin="0,0,0,14"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                <Button Content="Anuluj" Width="90" Margin="0,0,8,0" Click="Cancel_Click"/>
                <Button Content="Usuń"   Width="100" Background="#C84747" Foreground="White" Click="Ok_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
