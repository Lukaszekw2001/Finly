<Window x:Class="Finly.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rejestracja" Height="300" Width="400">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Login:" Margin="0,10" />
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,10"/>
            <TextBlock Text="Has³o:" Margin="0,10" />
            <PasswordBox x:Name="PasswordBox" Margin="0,10"/>
            <Button x:Name="RegisterButton" Content="Zarejestruj"
                    Command="{Binding RegisterCommand}" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
